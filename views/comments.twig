{#<?php#}
{% from 'alert.html.twig' import alert as alert %}

<section id="comments" class="comments">

	{% if post.comment_status == 'closed' %}
		{{ alert('warning', __( 'Comments are closed.', 'maera' ), false, 'comments-disabled', false) }}
	{% endif %}

	<div class="respond">
		<h2 class="h2">{{ __( 'Comments', 'maera' ) }} <span class="dashicons dashicons-testimonial"></span></h2>
		{{ comment_form }}
	</div>

	{% if post.comments %}
		<div class="responses">
			{% for cmt in post.get_comments() %}
				{% include [post.post_type~'-comment.twig', 'comment.twig'] with {comment:cmt} %}
			{% endfor %}
		</div>
	{% endif %}

</section>
